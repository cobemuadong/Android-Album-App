<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/custom_setting_filter_dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/filter_brightness"
            android:textSize="20dp"
            />

        <SeekBar
            android:id="@+id/filter_bright"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:thumbTint="@color/redPrimary"
            android:progressTint="@color/redPrimary"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/filter_corner"
            android:textSize="18dp"/>
        <SeekBar
            android:id="@+id/filter_corner"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:thumbTint="@color/redPrimary"
            android:progressTint="@color/redPrimary"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/filter_tint"
            android:textSize="20dp"/>
        <SeekBar
            android:id="@+id/filter_tint"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:thumbTint="@color/redPrimary"
            android:progressTint="@color/redPrimary"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/blur"
            android:textSize="20dp"/>
        <SeekBar
            android:id="@+id/filter_blur"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:thumbTint="@color/redPrimary"
            android:progressTint="@color/redPrimary"
            android:min="0"
            android:max="25"
            />
    </LinearLayout>
</LinearLayout>