<resources xmlns:tools="http://schemas.android.com/tools">
    <attr name="iconColor" format="color"/>
    <attr name="highlightTextColor" format="color"/>
    <!-- Base application theme. -->
    <style name="Theme.Album" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/seaPinkPrimary</item>
        <item name="colorPrimaryDark">@color/seaPinkPrimaryDark</item>
        <item name="colorAccent">@color/seaPinkAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorSecondary">@color/toolbarIconSeaPink</item>
        <item name="android:textColorPrimary">@color/textSeaPinkPrimary</item>
        <item name="iconColor">?android:attr/textColorPrimary</item>
        <item name="highlightTextColor">@color/highlightSeaPinkText</item>

    </style>

    <style name="Widget.Album.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorAccent">?attr/colorAccent</item>
        <item name="titleTextAppearance">@style/TextAppearance.Album.Toolbar</item>
    </style>

    <style name="TextAppearance.Album.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NavigationBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorAccent">?attr/colorAccent</item>
        <item name="titleTextAppearance">@style/TextAppearance.Album.Toolbar</item>
        <item name="actionBarStyle">@style/Theme.Album.ActionBar</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="highlightTextColor">?attr/highlightTextColor</item>
    </style>

    <style name="Theme.Album.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="elevation">0dp</item>
    </style>

    <style name="roundImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:background">@color/trans</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
    </style>

    <style name="DialogAnimation" parent="">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_left</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
    </style>

