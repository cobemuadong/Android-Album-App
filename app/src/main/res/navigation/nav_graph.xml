<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/albumFragment">

    <fragment
        android:id="@+id/albumFragment"
        android:name="com.example.album.album.AlbumFragment"
        android:label="Albums">
        <action
            android:id="@+id/action_albumFragment_to_detailAlbumFragment"
            app:destination="@id/detailAlbumFragment" />
        <action
            android:id="@+id/action_albumFragment_to_galleryFragment"
            app:destination="@id/galleryFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/detailAlbumFragment"
        android:name="com.example.album.detail_album.DetailAlbumFragment"
        android:label="DetailAlbumFragment" >
        <action
            android:id="@+id/action_detailAlbumFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <argument
            android:name="label"
            app:argType="string"/>
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.album.detail_image.DetailFragment"
        android:label="DetailFragment" />
    <fragment
        android:id="@+id/galleryFragment"
        android:name="com.example.album.gallery.GalleryFragment"
        android:label="PHOTOS" >
        <action
            android:id="@+id/action_galleryFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_galleryFragment_to_albumFragment"
            app:destination="@id/albumFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"

            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
</navigation>